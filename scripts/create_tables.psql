CREATE TABLE author (
   id serial PRIMARY KEY,
   name VARCHAR(255) NOT NULL,
   birthdate VARCHAR (255 )
);

CREATE TABLE books (
   id serial PRIMARY KEY,
   title VARCHAR(255) NOT NULL,
   description TEXT,
   author_id INT REFERENCES author(id)
);

CREATE TABLE users (
   id serial PRIMARY KEY,
   account VARCHAR(255) NOT NULL,
   password_hash TEXT,
   salt VARCHAR(255)
);

